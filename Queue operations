#include <stdio.h>
int queue[10],i,rear=-1,front=-1,x,choice,n;
void insert();
void delete();
void display();

int main()
{
    //front=-1;
    //rear=-1;
    printf("Enter the size of queue:");
    scanf("%d",&n);
    
    do
    {
        printf("\nThe queue operations are below:\n 1.INSERT\n 2.DELETE\n 3.DISPLAY\n 4.EXIT\n");
        printf("\nEnter your choice:");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1:
            {
                insert();
                break;
            }
            case 2:
            {
                delete();
                break;
            }
            case 3:
            {
                display();
                break;
            }
            case 4:
            {
                printf("\n\t Exit point");
                break;
            }
            default:
            {
                printf("Please enter a valid choice");
            }
        }
       
    } while(choice!=4);
    

    return 0;
}
void insert()
{
    if(rear==n-1)
    {
        printf("Queue overflow");
    }
    else
    {   
        if(front==-1)
        front=0;
        printf("Enter the number you want to insert on queue:");
        scanf("%d",&x);
        rear++;
        queue[rear]=x;
    }
}
void delete()
{
    if(front==-1)
    {
        printf("queue underflow");
        
    }
    else
    {
        printf("%d is deleted from queue",queue[front]);
        front++;
    }
}
void display()
{
    if(front==-1||front>rear)
    {   
        printf("Queue is empty");
    }    
    else
    {
        printf("Queue elements are:");
        for(i=front;i<=rear;i++)
        {
            printf("%d\t",queue[i]);
        }
    }
    
}
